<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>

<body>
    <div class="container">
        <h2 class="mt-5">Edição do plano</h2>
        <hr>
        <form action="/plans/update" method="POST">
            <div class="card">

                <div class="card-header">
                    <h4>Editar plano</h4>
                </div>

                <div class="card-body">
                    <input type="hidden" name="id" value="<%= plan.id %>">
                    <label for="title">Título:</label>
                    <% if(title_msg.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= title_msg %>
                    </div>
                    <% } %>
                    <input type="text" name="title" id="title" class="form-control" placeholder="Título do plano"
                        value="<%= plan.title %>"><br>
                    <label for="list">Nº de listas:</label>
                    <% if(list_msg.length > 0) { %>
                    <div class="alert alert-danger">
                        <%= list_msg %>
                    </div>
                    <% } %>
                    <input type="number" name="list" id="list" placeholder="Nº de listas" class="form-control"
                        value="<%= plan.list %>"><br>
                    <label for="client">Nº de clientes:</label>
                    <input type="number" name="client" id="client" placeholder="Nº de clientes" class="form-control"
                        value="<%= plan.client %>"><br>
                    <label for="value">Custo:</label>
                    <input type="number" name="value" id="value" placeholder="Custo" class="form-control"
                        value="<%= plan.value %>"><br>
                    <hr>
                    Permite importação de lista:
                    <% if(plan.import){ %>
                    <input type="checkbox" name="imports" id="imports" checked>
                    <% } else { %>
                    <input type="checkbox" name="imports" id="imports">
                    <% } %>
                </div>

                <div class="card-footer">
                    <button class="btn btn-success btn-block">Modificar</button>
                </div>
            </div>
        </form>
    </div>
</body>

<%- include ("../partials/footer.ejs") %>