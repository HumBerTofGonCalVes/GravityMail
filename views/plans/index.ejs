<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>

<body>
    <div class="container">
        <h2 class="mt-5">Listagem dos planos</h2>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Desativado?</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% plans.forEach( plan => { %>
                <tr>
                    <td><%= plan.id %></td>
                    <td><%= plan.title %></td>
                    <td><%= plan.value %> €</td>
                    <td><%= plan.deactivated %></td>
                    <td><a href="/plans/deactivate/<%= plan.id %>">Desativar</a> || <a
                            href="/plans/activate/<%= plan.id %>">Ativar</a></td>
                </tr>
                <% } ) %>
            </tbody>
        </table>
    </div>
</body>

